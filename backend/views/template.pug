doctype html
html(lang='en')
  head
    title Hello, world!
    // Required meta tags
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    // Fonts and icons
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css')
    // Material Kit CSS
    link(href='/api/css/material-dashboard.css?v=2.1.0', rel='stylesheet')
  body.dark-edition
    .wrapper
      .sidebar(data-color='azure', data-background-color='black', data-image='/api/img/sidebar-2.jpg')
        .logo
          a.simple-text.logo-normal(href='http://www.creative-tim.com')
            | Netcentric Architecture
        .sidebar-wrapper
          ul.nav
            li.nav-item.active
              a.nav-link(href='javascript:void(0)')
                i.material-icons dashboard
                p Dashboard
            // your sidebar here
      .main-panel
        block content
    script(src='/api/js/core/jquery.min.js')
    script(src='/api/js/core/popper.min.js')
    script(src='/api/js/core/bootstrap-material-design.min.js')
    script(src='https://unpkg.com/default-passive-events')
    script(src='/api/js/plugins/perfect-scrollbar.jquery.min.js')
    // Place this tag in your head or just before your close body tag.
    script(async='', defer='', src='https://buttons.github.io/buttons.js')
    // Chartist JS
    script(src='/api/js/plugins/chartist.min.js')
    // Notifications Plugin
    script(src='/api/js/plugins/bootstrap-notify.js')
    // Control Center for Material Dashboard: parallax effects, scripts for the example pages etc
    script(src='/api/js/material-dashboard.js?v=2.1.0')
    // Material Dashboard DEMO methods, don't include it in your project!
    script(src='/api/demo/demo.js')
    script(src='/api/js/template.js')
    block script
      
